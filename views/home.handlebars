{{> header }}

<div>
  {{#each posts}}
  <div class="row">
    <div class="col s10 m10 offset-s1 offset-m1">
      <div class="postcards card z-depth-0">
        <div class="card-content">
          <p class="right red-text accent-2">{{this.category}}</p>
          <a href="/post/{{this.postID}}" class="blue-grey-text darken-2 card-title">{{this.postTitle}}</a>
          <div class="card-action">
            <ul class="hide-on-small-and-down">
              <li class="left">
                <a href="#" class="red-text accent-2"><i class="left material-icons">arrow_drop_up</i>{{this.upvotes}}</a>
              </li>
                <a href="#" class="red-text accent-2"><i class=" left material-icons">arrow_drop_down</i>{{this.downvotes}}</a>
              </li>
              <li class="right">
                <a href="/post/{{this.postID}}" class="red-text accent-2"><i class="left material-icons">list</i></a>
              </li>
            </ul>
            <div class="right hide-on-med-and-up">
              <a class="red-text accent-2 dropdown-trigger btn-flat" href="#" data-target='dropdown1'><i class="material-icons">more_horiz</i></a>
              <ul id='dropdown1' class='dropdown-content'>
                <li>
                  <a href="#!" class="red-text accent-2"><i class="material-icons">arrow_drop_up</i>46</a>
                </li>
                <li>
                  <a href="#!" class="red-text accent-2"><i class="material-icons">arrow_drop_down</i>3</a>
                </li>
                <li>
                  <a href="#!" class="red-text accent-2"><i class="material-icons">list</i>100</a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>



