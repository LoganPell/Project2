  {{#if isAuthenticated}}
  <div class="fixed-action-btn">
    <a class="right btn-floating btn-large waves-effect waves-light blue-grey darken-2 modal-trigger" href="#postModal"><i class="material-icons">add</i></a>
  </div>

  <div id="postModal" class="modal">
    <div class="modal-content">
      <h4>Make a Post</h4>
      <form method="POST" action="post">
        <input type="text" id="postModalTitle" name="makePostTitle">
        <label class="active" for="postModalTitle">Post Title</label>
        <textarea id="postModalBody" class="materialize-textarea"></textarea>
        <label for="postModalBody">Type your post.</label>
        <input type="text" id="postModalLink"></input>
        <label for="postModalLink">Link a photo or video</label>
        <input type="text" id="postModalCategory"></input>
        <label for="postModalCategory">Category</label>
      </form>
    </div>
    <div class="modal-footer">
      <a id="post-submit" class="modal-action modal-close blue-grey darken-2 waves-effect waves-light btn">Post</a>
    </div>
  </div>
  {{/if}}
  

 
  <footer class="footer">
    <p>&copy; Company 2017</p>
  </footer>

